<div class="d-grid gap-2 d-md-flex justify-content-md-end">
  <a href="/register" type="button" class="btn btn-dark">Register</a>
  <a href="/login" type="button" class="btn btn-primary">Login</a>
</div>

<div class="d-grid d-md-flex justify-content-md-start">
  <form action="/auth/deleteAll" method="post" class="d-grid d-md-flex justify-content-md-start">
    <button class="btn btn-danger mb-4 mt-2" type="submit">Clean All</button>
  </form>
</div>

<div class="row d-md-flex justify-content-md-evenly">
{{#each users as |user|}}
<div class="col-12 col-md-6 col-lg-4 col-xl-3">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">{{user.name}}</h5>
                <p class="card-text">admin: {{user.admin}}</p>
                <h6 class="card-subtitle mb-2 text-muted">{{user.email}}</h6>
                <p class="card-text">{{user.password}}</p>
                <form class="row" action="/auth/{{user.id}}/delete" method="post">
                    <button class="btn btn-danger" type="submit">Delete User</button>
                </form>
            </div>
        </div>
</div>
{{/each}}
</div>