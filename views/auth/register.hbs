<div class="row justify-content-center">
  <div class="col-12 col-s-8 col-md-6 col-lg-4">
    <h2>Register</h2>
    <form action="/register" method="POST">

      <div class="input-group mb-3">
        <span class="input-group-text"><i class="fa fa-user-o fa-fw"></i></span>
        <input type="text" name="name" value="{{ user.name }}" class="form-control {{#if errors.name }}is-invalid{{/if}}" placeholder="User name..." />
        {{#if errors.name }}<div class="invalid-feedback">{{ errors.name }}</div>{{/if}}
      </div>

      <div class="input-group mb-3">
        <span class="input-group-text"><i class="fa fa-envelope-o fa-fw"></i></span>
        <input type="email" value="{{ user.email }}" class="form-control  {{#if errors.email }}is-invalid{{/if}}" name="email" placeholder="name@example.org"></input>
        {{#if errors.email }}<div class="invalid-feedback">{{ errors.email }}</div>{{/if}}
      </div>

      <div class="input-group mb-3">
        <span class="input-group-text"><i class="fa fa-key fa-fw"></i></span>
        <input type="password" name="password" class="form-control {{#if errors.password }}is-invalid{{/if}}"
          placeholder="User password" />
        {{#if errors.password }}<div class="invalid-feedback">{{ errors.password }}</div>{{/if}}
      </div>
      <div class="d-grid">
        <button type="submit" class="btn btn-primary">Create new User</button>
      </div>
    </form>
    <hr>
    <div  class="d-grid mb-5">
      <a href="/login" class="btn btn-secondary">Login</a>
    </div>
    {{#if currentUser}}
      <div  class="d-grid">
        <a href="/users" class="btn btn-warning">Users</a>
      </div>
    {{/if}}
  </div>
</div>