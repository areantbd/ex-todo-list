<div class="row justify-content-center">
  <div class="col-12 col-s-8 col-md-6 col-lg-4">
    <h2>Login</h2>
    <form action="/login" method="POST">

    {{#if errors}}
        <div class="alert alert-danger" role="alert">Invalid email or password</div>
    {{/if}}
        
        <div class="input-group mb-3">
            <span class="input-group-text"><i class="fa fa-envelope-o fa-fw" ></i></span>
            <input type="email" name="email" value="{{user.email}}" class="form-control {{#if errors.email}}is-invalid{{/if}}" placeholder="name@example.org">
            {{#if errors.email}}<div class="invalid-feedback">{{errors.email}}</div>{{/if}}
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text"><i class="fa fa-key fa-fw"></i></span>
            <input type="password" name="password" class="form-control {{!-- {{#if errors.password}}is-invalid{{/if}} --}}" placeholder="User password">
            {{#if errors.password}}<div class="invalid-feedback">{{errors.password}}</div>{{/if}}
        </div>
        
        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>

    </form>

    <hr>
    
    <div  class="d-grid">
      <a href="/register" class="btn btn-secondary">Register</a>
    </div>
  </div>
</div>