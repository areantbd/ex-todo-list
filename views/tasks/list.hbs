<a href="/tasks/new" type="button" class="btn btn-secondary">new task</a>
<a href="../register/register" type="button" class="btn btn-secondary">register</a>

<hr>

<form action="">
  <input type="text" class="form-control mb-4" name="author" placeholder="Search..."/>
</form>

<div class="row">
    {{#each tasks as |task|}}
        <div class="col-3">
            <div class="card mb-4">
                <img src="{{task.image}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{task.title}}</h5>
                    <p class="card-text">{{task.description}}</p>
                    {{!-- <p class="card-text">@{{task.author}}</p> --}}
                    <a href="tasks/{{task.id}}" class="btn btn-primary">See detail</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>